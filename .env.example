# Hoops Docker Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
MYSQL_ROOT_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=hoops
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_mysql_password_here

# ===========================================
# JWT
# ===========================================
JWT_SECRET=your-super-secret-key-must-be-at-least-32-characters-long

# ===========================================
# CORS
# ===========================================
# Local: http://localhost:3000
# Production: http://<PUBLIC_IP>:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ===========================================
# Kakao OAuth (Backend)
# ===========================================
KAKAO_CLIENT_ID=your_kakao_rest_api_key_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

# ===========================================
# Kakao OAuth (Frontend - Build Args)
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_KAKAO_CLIENT_ID=your_kakao_rest_api_key_here
NEXT_PUBLIC_KAKAO_JS_KEY=your_kakao_javascript_key_here
NEXT_PUBLIC_KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback

# ===========================================
# Production Only (deploy.sh)
# ===========================================
# PUBLIC_IP=your_server_ip_here
# KAKAO_JS_KEY=your_kakao_javascript_key_here
