# Hoops Docker Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Local Development (docker-compose)
# ===========================================

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=hoops

# Spring Datasource
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_mysql_password_here

# Kakao OAuth (Frontend - docker-compose)
NEXT_PUBLIC_KAKAO_CLIENT_ID=your_kakao_client_id_here
NEXT_PUBLIC_KAKAO_JS_KEY=your_kakao_js_key_here
NEXT_PUBLIC_KAKAO_REDIRECT_URI=http://localhost:3000/auth/kakao/callback
NEXT_PUBLIC_API_URL=http://localhost:8080

# ===========================================
# Production Deployment (deploy.sh)
# ===========================================

# Server Configuration
PUBLIC_IP=your_server_ip_here

# Kakao OAuth (deploy.sh uses these)
KAKAO_CLIENT_ID=your_kakao_client_id_here
KAKAO_JS_KEY=your_kakao_js_key_here
KAKAO_REDIRECT_URI=http://your_server_ip:3000/auth/kakao/callback
